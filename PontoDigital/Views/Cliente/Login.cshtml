@{
    ViewData["Title"] = "Cadastro - PontoDigital";
    ViewData["Title"] = "Comentario - PontoDigital";
}
    <header>
        @{
            Html.RenderPartial("_HeaderNavBar", ViewData["User"]);
        }
    </header>

    <main >
    <div class="login">

        <form method="POST" action='@Url.Action("Login", "Cliente")'>
            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" maxlength="20" minlength="3" name="email" />
            </div>

            <div>
                <label for="senha">Senha</label>
                <br />
                <input id="senha" type="password" maxlength="20" minlength="3" name="senha" />
            </div>
            
            <div>
                <input type="submit" value="Acessar minha conta" />
            </div>
            
            <div>        
                <a href='@Url.Action("Index", "Depoimento")'>Deixe seu Depoimento</a>
            </div>   
                
            <div id="link-cadastro">
                <a href='@Url.Action("Index", "Cadastro")'>Quero me cadastrar</a>
            </div>
        </form>
    </div>

    </main>

