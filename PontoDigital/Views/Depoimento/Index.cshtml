@{
    ViewData["Title"] = "Depoimento - PontoDigital";
}

<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
</header> 

<h2>Depoimento</h2>

<form method="POST" action='@Url.Action("Comentar", "Depoimento")'>


<div>
    <label for="nome">Nome Completo</label>
    <br />
    <input id="nome" type="text" maxlength="20" minlength="3" name="nome" value="@Model.Cliente.Nome"/>
</div>

<div>
    <label for="depoimento">Deixe seu Depoimento aqui</label>
    <br />
    <textarea name="depoimento" rows="10" cols="40"></textarea>
</div>

 <input type="submit" value="Comentar" />
</form>
