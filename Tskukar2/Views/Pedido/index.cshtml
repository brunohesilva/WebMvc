


<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
</header>


<main>
        <h2>Cadastra aí, jovem!</h2>
        <form method="POST" action="Pedido/RegistrarPedido">
                <label for="nome">Nome Completo</label>
                <br />
                <input id="nome" type="text" maxlength="20" minlength="3" name="nome" />
            </div>

            <div>
                <label for="endereco">Endereço</label>
                <br />
                <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco" />
            </div>

            <div>
                <label for="telefone">Telefone para contato</label>
                <br />
                <input id="telefone" type="text" name="telefone"/>
            </div>

            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" name="email"/>
            </div>

            <div class="double-field">
                <div>
                    <label for="marca">Marca</label>
                    <select id="marca" name="marca" required>
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var marca in Model.Marca)
                        {
                            <option value=@marca.Nome>@marca.Nome</option>
                        }
                    </select>
                </div>
                <div>
                    <label for="modelo">Modelo</label>
                    <select id="modelo" name="modelo">
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var modelo in Model.Modelo)
                        {
                            <option value=@modelo.Nome>@modelo.Nome</option>
                        }
                    </select>
                </div>
            </div>
            <input type="submit" value="Finalizar cadastro!" />
        </form>

    </main>